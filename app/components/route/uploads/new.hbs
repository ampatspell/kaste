<div class="route-uploads-new">

  <div class="content">

    {{#if this.model.isBusy}}

      <div class="uploading">
        Progress {{this.model.progress}}%â€¦
      </div>

    {{else}}

      <div class="idle">
        {{#if this.model.isError}}
          <div class="error">
            {{this.model.error.message}}
          </div>
        {{/if}}
        {{#unless this.model.isError}}
          <Input::File @onFiles={{this.onFiles}} @class="file"/>
        {{/unless}}
        <Input::Button
          @class="button"
          @value={{if this.model.isError
            'Retry failed files'
            (if (gt this.model.files.length 1)
              "Upload files"
              "Upload file")
          }}
          @disabled={{this.model.isUploadDisabled}}
          @onClick={{this.onSubmit}}
        />
      </div>

    {{/if}}

  </div>

</div>