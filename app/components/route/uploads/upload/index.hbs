<div class="route-uploads-upload-index">

  <div class="url">
    <LinkTo @route="downloads.download" @model={{@model.id}}>{{this.url}}</LinkTo>
  </div>

  <div class="filename">{{@model.filename}}</div>

  {{#if @model.downloadsString}}
    <div class="downloads">
      {{@model.downloadsString}}
    </div>
  {{/if}}

  <div class="details">
    {{@model.formattedContentType}}, {{@model.formattedSize}}, {{@model.formattedTimestamp}}
  </div>

  {{#if @model.isOwner}}

    <div class="actions">
      {{#if this.isDeleting}}
        Deletingâ€¦
      {{else}}
        <Input::Button::Confirm @value="Delete" @confirmation="Delete, sure?" @onClick={{this.delete}}/>
      {{/if}}
    </div>

  {{/if}}

</div>