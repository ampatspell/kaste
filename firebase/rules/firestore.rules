rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null && request.auth.uid != null;
    }

    match /uploads/{upload} {
      allow get: if true;
      allow list: if isSignedIn();
      allow create: if isSignedIn();
      allow delete: if isSignedIn();
    }

  }
}
